<mvc:View
        controllerName="Japra.controller.Kanji"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc">
    <Page title="Kanji" class="sapUiResponsiveMargin">
        <content>
            <Input value="{/searchText}" valueLiveUpdate="true" width="50%" liveChange=".onSearch" />
            <Button icon="sap-icon://search" class="sapUiSmallMarginEnd"/>
            <Select selectedKey="placeholder" change=".onSelectLevel"
                    forceSelection="false" items="{ path: '/level' }">
                <core:Item key="{key}" text="{text}" />
            </Select>
            <Button icon="sap-icon://add" class="sapUiMediumMarginBegin" press=".onOpenDialog" />
            <Table id="kanjiTable" inset="false" class="sapUiSmallMarginTopBottom" growing="true" growingThreshold="20"
                items="{ path: '/kanjiCollection',
                    parameters: {
                        $count: true
                    } }">
                <columns>
                    <Column width="12em" hAlign="Center">
                        <Text text="Kanji" class="columnTitle" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                        <Text text="Sino Vietnamese Reading"  class="columnTitle" />
                    </Column>
                    <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                        <Text text="Meaning"  class="columnTitle" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Level" class="columnTitle" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{kanji}" />
                            <Text text="{sinoVReading}" />
                            <Text text="{meaning}" />
                            <Text text="{level}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>